{% extends 'bootstrap.html.twig' %}

{% block title %}Smart Gallery Manager{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            {% for i, image in images | slice(0, 63) %}
                {% set image_data = image.getData() %}
                {% set image_url = url('image', {
                    hash: image.getHash(),
                    image_name: image_data.relative_pathname,
                }) %}
                <div class="col-sm-3">
                    <a href="{{ image_url }}" target="_blank">
                        <img class="img-fluid" src="{{ image_url }}" />
                    </a>
                    {{ dump(image.getProcessedData()) }}
                    <hr />
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
